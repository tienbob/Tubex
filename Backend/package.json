{
  "name": "tubex-backend",
  "version": "1.0.0",
  "description": "Tubex B2B SaaS Platform Backend",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register -r dotenv/config -r ./tests/setup.ts 'tests/**/*.test.ts' --exit",
    "test:unit": "cross-env NODE_ENV=test mocha -r ts-node/register -r dotenv/config -r ./tests/setup.ts 'tests/unit/**/*.test.ts' --exit",
    "test:integration": "cross-env NODE_ENV=test mocha -r ts-node/register -r dotenv/config -r ./tests/setup.ts 'tests/integration/**/*.test.ts' --exit",
    "test:watch": "cross-env NODE_ENV=test mocha -r ts-node/register -r dotenv/config -r ./tests/setup.ts 'tests/**/*.test.ts' --watch --watch-extensions ts",
    "test:coverage": "nyc npm test",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d data-source.ts",
    "migration:show": "npm run typeorm -- migration:show -d data-source.ts",
    "test-invoice-pdf": "node test-invoice-pdf.js"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.797.0",
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.0.3",
    "email-validator": "^2.0.4",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.6",
    "multer": "^1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pdfkit": "^0.17.1",
    "pg": "^8.15.5",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.22",
    "winston": "^3.17.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/chai": "^5.2.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^1.4.12",
    "@types/node": "^16.18.126",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pdfkit": "^0.13.9",
    "@types/redis": "^4.0.10",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "mocha": "^11.2.2",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "sinon": "^20.0.0",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
